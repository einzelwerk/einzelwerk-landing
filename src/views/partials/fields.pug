mixin input(data, className = '')
  //- data - isError isDark, name, type, placeholder, required
  - const classDark = data.isDark ? 'input_dark' : '' 
  - const classError = data.isError ? 'input_error' : '' 
  .input(class=`${classError} ${classDark}`)
    label.visually-hidden(for=data.name)=data.placeholder
    input.input__field(id=data.name name=data.name type=data.type placeholder=data.placeholder required=!!data.required autocomplete="off")
    if data.isError 
      span Это обязательное поле

mixin textarea(data, className = '')
  //- data - isError isDark, name, placeholder, required
  - const classDark = data.isDark ? 'input_dark' : '' 
  - const classError = data.isError ? 'input_error' : '' 
  .input(class=`${classError} ${classDark}`)
    label.visually-hidden(for=data.name)=data.placeholder
    textarea.input__field(id=data.name name=data.name placeholder=data.placeholder required=!!data.required rows="1" autocomplete="off")
    if data.isError 
      span Это обязательное поле