mixin input(data, className = '')
  //- data - name, type, placeholder, required
  .input 
    label.visually-hidden(for=data.name) 
    input.input__field(id=data.name name=data.name type=data.type placeholder=data.placeholder required=!!data.required autocomplete="off")

mixin textarea(data, className = '')
  //- data - name, placeholder, required
  .input 
    label.visually-hidden(for=data.name) 
    textarea.input__field(id=data.name name=data.name placeholder=data.placeholder required=!!data.required rows="1" autocomplete="off")