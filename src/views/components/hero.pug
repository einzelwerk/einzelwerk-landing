mixin hero 
  section#hero.hero.first-section
    .hero__container.container
      .hero__inner
        .hero__content
          .hero__title-block 
            -
              const workersList = [ 
                '@//img/workers/woker-1.png',
                '@//img/workers/woker-2.png',
                '@//img/workers/woker-3.png',
                '@//img/workers/woker-4.png',
                '@//img/workers/woker-5.png',
              ]
            ul.hero__workers
              each worker in workersList
                li.hero__workers-item 
                  picture.hero__workers-img-wrap
                    img.hero__workers-img(src=worker, alt="")
              li.hero__workers-item.hero__workers-item_more 
                span +10
            h1.hero__title Офигенные и продуманные сайты от немецкой студии
          .hero__desc Делаем продукты, которые радуют не только глаз, но и ваших сейлзов
          button.hero__btn.btn(type="button" data-popup-open="discuss") Обсудить проект
    picture.hero__bg-wrap
      source(media="(max-width:767.98px)", srcset="@//img/hero/poster-mobile.png")
      img.hero__bg(src="@//img/hero/poster.png", alt="")

